@{
	Layout = null;
}
<link rel="stylesheet" href="/css/bootstrap.min.css">
<script src="/js/jquery-3.6.0.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<div class="container" style="margin-top:25px;">
	@if (ViewBag.Error != null)
	{
		<div class="alert alert-danger" style="margin-top:25px;">@ViewBag.Error</div>
	}
	<div class="col-sm-3"></div>
	<div class="col-sm-6">
		<form action="/admin/Login" method="post">
			<div class="form-control" style="margin-bottom:10px;">
				<div class="mb-3">
					<label for="email" class="form-label">Email Adres</label>
					<input type="email" class="form-control" id="email" name="email" />
				</div>
				<div class="mb-3">
					<label for="password" class="form-label">Password</label>
					<input type="password" class="form-control" id="password" name="sifre">
				</div>
			</div>
			<button type="submit" class="btn btn-success">Giriş Yap</button>
		</form>

	</div>
	<div class="col-sm-3"></div>
</div>