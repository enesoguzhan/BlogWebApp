<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<!-- FontAwesome JS-->
	<script defer src="https://use.fontawesome.com/releases/v5.7.1/js/all.js"></script>
	<!-- Theme CSS -->
	<link id="theme-style" rel="stylesheet" href="/assets/css/theme-1.css">
	<!-- Javascript -->
	<script src="/assets/plugins/jquery-3.3.1.min.js"></script>
	<script src="/assets/plugins/popper.min.js"></script>
	<script src="/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
	<!-- Style Switcher (REMOVE ON YOUR PRODUCTION SITE) -->
	<script src="/assets/js/demo/style-switcher.js"></script>
</head>
<body>
	<header class="header text-center">
		<h1 class="blog-name pt-lg-4 mb-0"><a href="/Home/Index">Test's Blog</a></h1>

		<nav class="navbar navbar-expand-lg navbar-dark">

			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div id="navigation" class="collapse navbar-collapse flex-column">
				<div class="profile-section pt-3 pt-lg-0">
					<img class="profile-image mb-3 rounded-circle mx-auto" src="assets/images/profile.png" alt="image">

					<div class="bio mb-3">Test Blog Bio Açıklama<br><a href="#">Hakkımda Daha Fazlası...</a></div>

					<ul class="navbar-nav flex-column text-left">
						<li class="nav-item active">
							<a class="nav-link" href="/Home/Index"><i class="fas fa-home fa-fw mr-2"></i>Blog Ana Sayfa <span class="sr-only">(current)</span></a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#"><i class="fas fa-bookmark fa-fw mr-2"></i>Blog Yaz</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#"><i class="fas fa-user fa-fw mr-2"></i>Hakkımızda</a>
						</li>
					</ul>

				</div>
			</div>
		</nav>
	</header>
	<div>
		@RenderBody()
	</div>
</body>
</html>
